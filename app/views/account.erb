<h1>Welcome, <%= @user.username %>!</h1>

<p>
  Your Balance: $<%= sprintf("%.2f",@user.balance) %><br>

  <form method=post action="/account">
    <h3>Withdraw Money:</h3>
    <input type="text" name="amount" placeholder="$0.00"><br>

    <input type="submit" id="submit" value="Submit Withdrawal">
  </form>

  <form method=post action="/account">
    <h3>Deposit Money:</h3>
    <input type="text" name="amount" placeholder="$0.00"><br>

    <input type="submit" id="submit" value="Submit Deposit">
  </form>
</p>

<p><a href="/logout">Log Out</a></p>
